<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">

  <variable name="logDir" value="${environment:KAGARR_DATA:whenEmpty=${basedir}}/logs" />

  <targets>
    <!-- Console output for Docker logs -->
    <target name="console"
            xsi:type="ColoredConsole"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss.f} | ${level:uppercase=true:padding=-5} | ${logger:shortName=true} | ${message} ${exception:format=tostring}" />

    <!-- Rolling file log (5 x 10 MB) -->
    <target name="file"
            xsi:type="File"
            fileName="${logDir}/kagarr.log"
            archiveFileName="${logDir}/kagarr.{#}.log"
            archiveNumbering="Rolling"
            maxArchiveFiles="5"
            archiveAboveSize="10485760"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss.f} | ${level:uppercase=true:padding=-5} | ${logger} | ${message} ${exception:format=tostring}" />

    <!-- Separate error log -->
    <target name="errorFile"
            xsi:type="File"
            fileName="${logDir}/kagarr.errors.log"
            archiveFileName="${logDir}/kagarr.errors.{#}.log"
            archiveNumbering="Rolling"
            maxArchiveFiles="3"
            archiveAboveSize="10485760"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss.f} | ${level:uppercase=true:padding=-5} | ${logger} | ${message} ${newline}${exception:format=tostring}" />
  </targets>

  <rules>
    <!-- Skip noisy Microsoft/System loggers below Warn -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.*" maxlevel="Info" final="true" />

    <logger name="*" minlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Debug" writeTo="file" />
    <logger name="*" minlevel="Error" writeTo="errorFile" />
  </rules>
</nlog>
